# Uncomment the next line to define a global platform for your project
platform :ios, '11.4'

target 'banano-quest' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for banano-quest
  pod 'Pocket', :git => 'https://github.com/pokt-network/pocket-ios-sdk.git', :branch => 'master', :commit => '66242ffa704f100d21e240b59b448d7df9615105'
  pod 'PocketEth', :git => 'https://github.com/pokt-network/pocket-ios-eth.git', :branch => 'master', :commit => '4df731ba0d00f6138cbaffb8a4cafcefb798ebee'
  pod 'web3swift', '1.0.1'
  pod 'CryptoSwift', '0.10.0'
  pod 'SwiftKeychainWrapper', :git => 'git@github.com:jrendel/SwiftKeychainWrapper.git', :branch => 'develop', :commit => '77f73c354d695d976bcf1437fc9fbcea981aa2b4'
  pod 'SidebarOverlay', :git => 'git@github.com:pokt-network/SidebarOverlay.git', :branch => 'develop'
  pod 'FlexColorPicker', :git => 'https://github.com/RastislavMirek/FlexColorPicker', :branch => 'master'
  pod 'SwiftHEXColors'
  pod 'BiometricAuthentication'
  pod 'HDAugmentedReality', '~> 2.4'
    
  target 'banano-questTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'banano-questUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

post_install do |installer|
    installer.pods_project.build_configurations.each do |config|
        config.build_settings.delete('CODE_SIGNING_ALLOWED')
        config.build_settings.delete('CODE_SIGNING_REQUIRED')
    end
end


